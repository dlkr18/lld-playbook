classDiagram
    class Rider {
        -String riderId
        -String name
        +requestRide()
    }
    class Driver {
        -String driverId
        -DriverStatus status
        +acceptRide()
    }
    class Trip {
        -String tripId
        -TripStatus status
        -double fare
    }
    class RideHailingService {
        <<interface>>
        +requestRide()
        +acceptRide()
    }
    RideHailingService --> Rider
    RideHailingService --> Driver
    RideHailingService --> Trip

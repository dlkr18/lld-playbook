classDiagram
    class Board {
        -Piece[][] pieces
        +movePiece()
        +isValidMove()
    }
    class Piece {
        <<abstract>>
        -Color color
        -Position position
        +getPossibleMoves()
    }
    class King {
        +getPossibleMoves()
    }
    class Queen {
        +getPossibleMoves()
    }
    class Player {
        -String name
        -Color color
    }
    class Game {
        -Board board
        -Player[] players
        +makeMove()
        +checkmate()
    }
    Piece <|-- King
    Piece <|-- Queen
    Board --> Piece
    Game --> Board
    Game --> Player
